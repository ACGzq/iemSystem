<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:visibility="gone"
        android:id="@+id/del_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="2dp"
        app:srcCompat="@android:drawable/presence_busy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item1"
     />
<TextView
    android:id="@+id/item1"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:textColor="@color/text_color_black"
    android:text="12345"
    android:gravity="center"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/del_btn"
    app:layout_constraintEnd_toStartOf="@id/item2"
    app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/item2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_black"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/item1"
        app:layout_constraintEnd_toStartOf="@id/item3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/item3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_black"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/item2"
        app:layout_constraintEnd_toStartOf="@id/item4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
    <TextView
        android:id="@+id/item4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="@color/text_color_black"
        android:text=""
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/item3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>
</android.support.constraint.ConstraintLayout>