<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.TaskSubmitActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bar_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back">
        <TextView
            android:id="@+id/submit_title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thok_equipment_repair_request"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bottom_line_shape"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true">
                    <TextView
                        android:id="@+id/equipment_title"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thok_equipment_select"/>
                    <EditText
                        android:id="@+id/equipment_edit"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/equipment_scan"
                        android:layout_marginRight="15dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_dashboard_black_24dp" />
                </LinearLayout>
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/equipment_info"
                    android:text="@string/thok_equipment_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
               <!-- <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/equipment_name"
                    android:text="@string/thok_equipment_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/equipment_model"
                    android:text="@string/thok_equipment_model"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/equipment_position"
                    android:text="@string/thok_equipment_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/malfunction_cause"
                    android:text="@string/thok_malfunction_cause"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="10dp"
                    android:id="@+id/repair_detail"
                    android:text="@string/thok_repair_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >
                    <TextView
                        android:id="@+id/status_title"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设备状态"/>

                    <LinearLayout
                        android:id="@+id/select_icon"
                        android:layout_weight="4"
                        android:background="@drawable/text_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/status_text"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="停机" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@android:drawable/ic_menu_more" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/repair_time"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >
                    <TextView
                        android:id="@+id/time_title"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="维修时间"/>

                    <LinearLayout
                        android:id="@+id/time_button"
                        android:layout_weight="4"
                        android:background="@drawable/text_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time_text"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@android:drawable/ic_menu_day" />
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/request_time"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >
                    <TextView
                        android:id="@+id/time_title2"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="时间"/>

                    <LinearLayout
                        android:id="@+id/time_button2"
                        android:layout_weight="4"
                        android:background="@drawable/text_bg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time_text2"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center_vertical"
                            android:text="" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            app:srcCompat="@android:drawable/ic_menu_day" />
                    </LinearLayout>
                </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:stretchColumns = "1"
                >
                <TextView
                    android:id="@+id/input_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:text="输入项"/>
                <TextView
                    android:id="@+id/input_text1"
                    android:background="@drawable/text_bg"
                    android:layout_weight="4"
                    android:singleLine="true"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=""/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/input_layout2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >

                    <TextView
                        android:id="@+id/input_title2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="输入项" />
                    <TextView
                        android:id="@+id/input_text2"
                        android:background="@drawable/text_bg"
                        android:layout_weight="4"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:layout_height="match_parent"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/input_layout3"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >
                    <TextView
                        android:id="@+id/input_title3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="输入项"/>
                    <TextView
                        android:id="@+id/input_text3"
                        android:background="@drawable/text_bg"
                        android:layout_weight="4"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/input_layout4"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:stretchColumns = "1"
                    >
                    <TextView
                        android:id="@+id/input_title4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="输入项"/>
                    <TextView
                        android:id="@+id/input_text4"
                        android:background="@drawable/text_bg"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""/>
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </ScrollView>




</LinearLayout>