<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.GoodsInfoActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bar_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/title_text"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thok_goods_info"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/goods_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_line_shape"
        android:text="@string/thok_repair_order"
        android:textColor="@color/text_color_black"
        android:textSize="17sp"
        android:layout_margin="5dp"
        android:lineSpacingExtra = "5dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar" />
    <LinearLayout
        android:layout_margin="5dp"
        android:padding="10dp"
        android:id="@+id/item_detailed"
        android:background="@drawable/bottom_line_shape"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/goods_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_color_black"
            android:textSize="17sp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/thok_goods_detailed"/>
        <TextView
            android:textColor="@color/text_color_black"
            android:textSize="17sp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text=">"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info_detailed"
        android:visibility="gone"
        android:background="@color/bg_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_color_black"
                android:text="序号"/>
            <TextView
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_color_black"
                android:text="名称"/>
            <TextView
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_color_black"
                android:text="型号"/>
            <TextView
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="@color/text_color_black"
                android:text="数量"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/detailed_list_view"
            android:layout_width="match_parent"
            tools:listitem="@layout/list_item_edging"
            android:layout_height="match_parent"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>