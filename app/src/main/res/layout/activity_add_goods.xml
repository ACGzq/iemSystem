<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddGoodsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/add_goods_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bar_color"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title_order">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thok_add_goods"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_gravity="center"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/name_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="名称"
        android:textColor="@color/text_color_black"
        app:layout_constraintBottom_toBottomOf="@id/search_bt"
        app:layout_constraintEnd_toStartOf="@id/name_text"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_goods_toolbar" />
    <EditText
        android:id="@+id/name_text"
        android:layout_marginTop="25dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toEndOf="@id/name_title"
        app:layout_constraintEnd_toStartOf="@id/search_bt"
        app:layout_constraintTop_toBottomOf="@+id/add_goods_toolbar"
        app:layout_constraintBottom_toBottomOf="@id/search_bt"
        android:text="北京"
        android:background="@drawable/text_bg"/>
    <Button
        android:id="@+id/search_bt"
        android:layout_marginTop="25dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/name_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_goods_toolbar"
        android:text="@string/search_button_text"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/model_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/search_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/model_text"
        android:textColor="@color/text_color_black"
        android:text="型号"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/model_text"
        android:background="@drawable/text_bg"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/name_text"
        app:layout_constraintTop_toBottomOf="@id/search_bt"
        app:layout_constraintEnd_toStartOf="@id/search_bt"
        android:text="型号"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/model_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/model_text"
        android:textColor="@color/text_color_black"
        android:text="数量"/>
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/quantity_text"
        android:background="@drawable/text_bg"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/name_text"
        app:layout_constraintTop_toBottomOf="@id/model_text"
        app:layout_constraintEnd_toStartOf="@id/search_bt"
        android:text="5"/>
</android.support.constraint.ConstraintLayout>