<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    tools:context=".ui.TaskInquiryActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/bar_color"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/inquiry_title"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thok_equipment_repair_request"/>
    </android.support.v7.widget.Toolbar>
        <TextView
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:id="@+id/input_title"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/input_edit"
            app:layout_constraintBottom_toBottomOf="@id/input_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:textColor="@color/text_color_black"
            android:text="备件名称"/>
        <android.support.v7.widget.SearchView
            app:queryHint="输入名称"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/input_edit"
            android:background="@drawable/text_bg"
            android:layout_width="0dp"
            android:layout_height="35dp"
            app:layout_constraintHorizontal_weight="4"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toEndOf="@id/input_title"
            app:layout_constraintEnd_toStartOf="@id/inquiry_button"
            android:iconifiedByDefault="false"
            />
    <Button
        android:stateListAnimator="@null"
        android:id="@+id/inquiry_button"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/half_bt_bg"
        android:text="搜索"
        android:textColor="@color/text_color_white"
        app:layout_constraintBottom_toBottomOf="@+id/input_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/input_edit"
        app:layout_constraintTop_toTopOf="@id/input_edit" />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        app:layout_constraintVertical_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/input_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
    <ListView
        android:visibility="gone"
        android:background="@drawable/text_bg"
        android:id="@+id/list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_edit"
        app:layout_constraintStart_toStartOf="@id/input_edit"
        app:layout_constraintEnd_toEndOf="@id/input_edit" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/example_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/example1" />

</android.support.constraint.ConstraintLayout>